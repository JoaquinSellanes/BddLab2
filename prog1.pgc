  }
}

// Funcion que nos permite el obtener el total recaudado en un mes / aÃ±o.
int consultarVentas(){
  int foo;
  int anio = 0;
  int mes = 0;
  clearS();

  // Pedimos el aÃ±o en el cual queremos consultar el total de ventas
  do {
    titleConsultaVentas();
    printf("\n\nDe que AÃ‘O quiere realizar la consulta? (2000 - 2050)\n\n\t-->");
    anio = intValido();
    if (anio < 2000 || anio > 2050) {
      printf("\n\nOpciÃ³n invÃ¡lida. Por favor, debe ingresar un aÃ±o valido (2000 - 2050), intente nuevamente.");
      esperarEnter();
    }
  } while (( anio < 2000 || anio > 2050) || anio == 0);
  clearS();

  // Pedimos el mes en el cual queremos consultar el total de ventas
  do
  {
    titleConsultaVentas();
    printf("\n\nDe que MES quiere realizar la consulta? (1-12)\n\n\t-->");
    mes = intValido();
    if (mes > 12) {
    printf("\n\nOpciÃ³n invÃ¡lida. Por favor, debe ingresar un mes valido (1-12), intente nuevamente.");
    esperarEnter();
}
  } while (mes > 12 || mes == 0);
  conectar();
  // Realizamos la consulta que devuelve el total de ventas
  EXEC SQL SELECT sp_ventas(:mes, :anio) INTO :foo;
  desconectar();

  // Mostramos el resultado 
  if(foo == 0)
  {
    printf("\n\nNo se realizaron ventas en el periodo dado");
    printf("\n----------------------------------------------------------\n");
    esperarEnter();
  }else
  {
    printf("\n\nEl total recaudado en ventas es de: $%d", foo);
    printf("\n----------------------------------------------------------\n");
    esperarEnter();
  }
  
  return 0;
}


