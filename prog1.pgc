// Funcion que permite la venta de entradas incluyendo el registro del artÃ­culo de regalo
int ventaEntrada(){
    clearS();
    titleVentaEntrada();

    // Pedimos la opcion de si el visitante es menor de edad o es mayor y es necesario cobrarle
    int opcion;
    do {
        printf("\n\nEl visitante es menor de edad?");
        printf("\n\t1 - SI");
        printf("\n\t2 - NO\n\t--> ");
        opcion = intValido();
        if (opcion != 1 && opcion != 2) {
            printf("\n\nOpciÃ³n invÃ¡lida. Por favor, intente nuevamente.");
            esperarEnter();
        }
    } while (opcion != 1 && opcion != 2);

    // Si el visitante es menor de edad
    if (opcion == 1)
    {  
      // Creamos el registro de venta y venta entrada para un visitantemenor de edad
      int id_venta_enterada, confValue;
      conectar();
      EXEC SQL SELECT valor_i INTO :confValue FROM config WHERE elemento = 'valor_entrada_menor';
      EXEC SQL INSERT INTO venta(valor) VALUES (:confValue); // ðŸ›‘
      EXEC SQL SELECT currval('venta_id_seq') INTO :id_venta_enterada; // ðŸ›‘
      EXEC SQL INSERT INTO ventaentrada (idventa, esmenor) VALUES (:id_venta_enterada, true); // ðŸ›‘
      EXEC SQL COMMIT; // ðŸ›‘     
      desconectar();
      printf("\n\nEntrada registrada correctamente.");
      printf("\n----------------------------------------------------------");
      esperarEnter();
      clearS();
    }

    // Si el visitante es mayor de edad
    if (opcion == 2)
    {
        int id_venta_enterada, valor_entrada, val_elec, confValue;
        // Pedimos el precio estandar configurado en la base de datos
        conectar();
        EXEC SQL SELECT valor_i INTO :confValue FROM config WHERE elemento = 'valor_entrada';
        desconectar();
        limpiarUltimaLineas(10);
        // Pedimos que ingrese lo que se le va a cobrar al visitante
        do {
        printf("\nQue precio quiere asignarle?");
        printf("\n\t1 - Recomendado ($%d)", confValue);
        printf("\n\t2 - Otro (Ingresar)\n\n\t--> ");
        val_elec = intValido();
        if (val_elec != 1 && val_elec != 2) {
            printf("\n\nOpciÃ³n invÃ¡lida. Por favor, intente nuevamente.");
            esperarEnter();
        }
        } while (val_elec != 1 && val_elec != 2);

        switch (val_elec)
        {
        case 1:
            valor_entrada = confValue;
            break;
        case 2:
            printf("\nIngrese el valor de la entrada: ");
            valor_entrada = intValido();
        default:
            break;
        }
        // Una vez con el valor a combrar procedemos a realizar la operaciones necesarias para registrar la venta y la venta entrada
        conectar();
        EXEC SQL INSERT INTO venta(valor) VALUES (:valor_entrada);
        EXEC SQL SELECT currval('venta_id_seq') INTO :id_venta_enterada;
        EXEC SQL INSERT INTO ventaentrada (idventa, esmenor) VALUES (:id_venta_enterada, false);
        EXEC SQL COMMIT;
        desconectar();
        printf("\n\nEntrada registrada correctamente.");
        printf("\n----------------------------------------------------------");
        esperarEnter();
        clearS();
    }
    return 0;
}

// Funcion que permite la venta de artÃ­culos de la tienda (tazas, lapiceras, llaveros, etc)
int ventaArticulo(){
  int idarticulo = -1;
  int cantidadVenta = 0;
  int precioUni = 0;
  int precioTotal = 0;
  bool validId = false;
  bool validCant;
  int val_elec, id_venta_articulo;
  conectar();
  clearS();
  // Pedimos el identificador del articulo que se quiera vender y comprobamos que este exista en nuestros registros
  do
  {
    titleVentaArticulo();
    if (idarticulo != -1){
        clearS();
        titleVentaArticulo();
        printf("\n\nNo existe dicho articulo, intente nuevamente\n\n\t--> ");
    }else
    {
      printf("\n\nIngrese el identificador del articulo a vender\n\n\t--> ");
    }
    idarticulo = intValido();
    EXEC SQL SELECT sp_existeariculo(:idarticulo) INTO :validId;
  } while (!validId);
  clearS();

  // Pedimos la cantidad a vender y comprobamos que exista el stock anecesario para la cantidad solicitada
  titleVentaArticulo();
  printf("\n\nIngrese la cantidad a vender\n\n\t--> ");
  cantidadVenta = intValido();
  EXEC SQL SELECT sp_existestock(:idarticulo, :cantidadVenta) INTO :validCant;
  if (!validCant)
  {
    printf("\n\nNO EXISTE DICHA CANTIDAD EN STOCK --- SE CANCELA LA VENTA\n");
    printf("\n----------------------------------------------------------");
    esperarEnter();
    desconectar();
    return 1;
  }

  // Generamos una consulta q devuelva el precio unitario del articulo a vender
  EXEC SQL SELECT sp_valorarticulo(:idarticulo) INTO :precioUni;

  // Calculamos el monto total de la venta
  precioTotal = precioUni * cantidadVenta;

  clearS();

  // Pedimos la confirmacion de la venta 
  printf("\n----------------------------------------------------------\n");
  printf("CONFIRMAR VENTA");
  printf("\n----------------------------------------------------------\n");
  printf("ID del Articulo: %d\n", idarticulo);
  printf("Cantidad a vender: %d\n", cantidadVenta);
  printf("Precio total: %d\n", precioTotal);
  printf("\n----------------------------------------------------------\n");
  printf("\n\t1 - CONFIRMAR");
  printf("\n\t2 - CANCELAR\n\n\t--> ");
  val_elec = intValido();
  do{
    if (val_elec != 1 && val_elec != 2) {
      printf("\n\nOpciÃ³n invÃ¡lida. Por favor, intente nuevamente.");
      esperarEnter();
    } 
  } while (val_elec != 1 && val_elec != 2);
  switch (val_elec)
  {
    // En caso de confirmal la venta registramos y desconectamos de stock las mismas
  case 1:
    EXEC SQL INSERT INTO venta(valor) VALUES (:precioTotal); // ðŸ›‘
    EXEC SQL SELECT currval('venta_id_seq') INTO :id_venta_articulo; // ðŸ›‘
    EXEC SQL INSERT INTO ventaarticulo (idventa, idarticulo, cantidad) VALUES (:id_venta_articulo, :idarticulo, :cantidadVenta); // ðŸ›‘
    EXEC SQL COMMIT;// ðŸ›‘
    desconectar();
    return 0;
    break;
    // De ser necesario, cancelamos la operacion
  case 2:
    printf("\n\nSE CANCELA LA VENTA\n");
    esperarEnter();
    desconectar();
    return 0;
  default:
    break;
  }
}

// Funcion que permite el realizar la reposiciÃ³n de artÃ­culos, esta puede ser llamada ya con el id del articulo a reponer como parametro
// en caso de no ser asi sellama con un -1 (cialquier numero negativo) como parametro y esta ya pedira el id dentro de la funcion 
int registroReposicion(int OptId){
  int idarticulo = -1, precioTotal, cant, val_elec;
